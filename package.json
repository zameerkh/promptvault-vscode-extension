{
  "name": "promptvault-dev-toolkit",
  "displayName": "PromptVault - Developer Toolkit",
  "description": "A local prompt and snippet vault with search, categories, and quick insertion for developers. Automated CI/CD enabled.",
  "version": "1.0.7",
  "publisher": "zameerkh0696",
  "author": {
    "name": "PromptVault Team"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "prompts",
    "snippets",
    "code",
    "templates",
    "productivity",
    "vault",
    "local storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zameerkh0696/promptvault-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/zameerkh0696/promptvault-vscode-extension/issues"
  },
  "homepage": "https://github.com/zameerkh0696/promptvault-vscode-extension#readme",
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptVault.open",
        "title": "Open PromptVault",
        "icon": "$(book)"
      },
      {
        "command": "promptVault.insert",
        "title": "Insert Prompt",
        "icon": "$(add)"
      },
      {
        "command": "promptVault.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "promptVault.import",
        "title": "Import Prompts",
        "icon": "$(cloud-download)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptVault",
          "title": "PromptVault",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "promptVault": [
        {
          "id": "promptVault.sidebar",
          "name": "Prompts",
          "type": "webview",
          "icon": "$(book)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "promptVault.refresh",
          "when": "view == promptVault.sidebar",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "promptVault.open",
          "when": "true"
        },
        {
          "command": "promptVault.insert",
          "when": "true"
        },
        {
          "command": "promptVault.import",
          "when": "true"
        },
        {
          "command": "promptVault.refresh",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptVault.insert",
        "key": "ctrl+shift+alt+p",
        "mac": "cmd+shift+alt+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
